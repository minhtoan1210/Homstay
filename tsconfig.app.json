{
  "compilerOptions": {
    "moduleResolution": "node",
    "allowJs": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,
    "isolatedModules": true,
    "allowImportingTsExtensions": true,
    "incremental": false
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
